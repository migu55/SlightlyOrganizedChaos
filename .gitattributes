# Auto-detect text files and perform LF normalization
* text=auto

# Unity-specific files
*.meta text eol=lf
*.unity binary
*.prefab binary
*.asset binary
*.mat binary
*.controller binary
*.anim binary

# Script files - force LF line endings
*.cs text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.sh text eol=lf

# Configuration files
*.json text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files - should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.psd binary
*.fbx binary
*.obj binary
*.blend binary
*.ma binary
*.mb binary
*.tga binary
*.exr binary
*.wav binary
*.mp3 binary
*.ogg binary
*.aiff binary
*.flac binary

# Git attributes file itself
.gitattributes text eol=lf